SRCS=main.cpp
OBJS=$(SRCS:.cpp=.o)
EXE_NAME=arith_test

CC=gcc
CXX=g++
LD=ld
AR=ar
RANLIB=ranlib
RM=rm -f

#-- Linux, Cygwin, & MinGW(MSYS).
CFLAGS=
CXXFLAGS=-c -std=c++17 -Wall
LDFLAGS=-L. -larithmetic

all: $(SRCS) $(EXE_NAME)

$(EXE_NAME): $(OBJS) 
	$(CXX) -o $@ $^ $(LDFLAGS)

.cpp.o:
	$(CXX) -o $@ $< $(CXXFLAGS)

clean:
	$(RM) $(EXE_NAME) $(EXE_NAME).exe $(OBJS) *~ core
